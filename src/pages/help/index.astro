	}

  .mu-box {
    max-width: 800px;
    margin: 20px auto;
    border: 2px solid #b8860b;
    background: #0e0e0e;
    color: #f5deb3;
    box-shadow: 0 0 10px #000;
  }

  .mu-box h3 {
    margin: 0;
    padding: 10px;
    text-align: center;
    background: linear-gradient(#4b0000, #220000);
    color: #ffd700;
    border-bottom: 2px solid #b8860b;
    text-shadow: 1px 1px 2px #000;
  }

  .mu-table {
    width: 100%;
    border-collapse: collapse;
  }

  .mu-table th {
    background: #1c1c1c;
    color: #ffd700;
    padding: 8px;
    border-bottom: 1px solid #b8860b;
  }

  .mu-table td {
    padding: 8px;
    border-bottom: 1px solid #333;
  }

  .mu-table tr:nth-child(odd) {
    background: #121212;
  }

  .mu-table tr:nth-child(even) {
    background: #0a0a0a;
  }

  .mu-table tr:hover {
    background: #2a1a00;
  }

</style>