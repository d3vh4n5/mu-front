---
const { title, columns, data } = Astro.props

---

<div class="mu-box">
  {title && <h3>{title}</h3>}

  <table>
    <thead>
      <tr>
        {columns.map(col => (
          <th>{col.header}</th>
        ))}
      </tr>
    </thead>

    <tbody>
      {data.map((row, i) => (
        <tr>
          {columns.map(col => (
            <td class={col.className}>
              {row[col.key]}
            </td>
          ))}
        </tr>
      ))}
    </tbody>
  </table>
</div>

<style>
  .mu-box {
    border: 1px solid #b89b5e;
    background: #111;
    color: #e6d8b5;
    width: 100%;
  }

  h3 {
    margin: 0;
    padding: 8px;
    text-align: center;
    background: linear-gradient(#5a1c1c, #2a0d0d);
    color: #f5deb3;
    font-weight: bold;
    border-bottom: 1px solid #b89b5e;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  thead {
    background: #1c1c1c;
  }

  th, td {
    padding: 6px 8px;
  }

  tbody tr:nth-child(odd) {
    background: #151515;
  }

  tbody tr:nth-child(even) {
    background: #0f0f0f;
  }

  tbody tr:hover {
    background: #2a1a0a;
  }
</style>
