---
import { Image } from "astro:assets"
import heroImg from '../assets/img/hero2.jpg';

const pages = [
    { path: "/", name: "Inicio" },
    { path: "/register.html", name: "Crear cuenta" },
    { path: "/downloads.html", name: "Bajar Mu" },
    { path: "/vip.html", name: "Como ser VIP" },
]
---

<header>
    <nav>
        <ul>
            {
                pages.map( page => (<li>
                    <a href={page.path}>{page.name}</a>
                </li>) )
            }
        </ul>
    </nav>
    <div class="container">
        <Image
            src={heroImg}
            alt="Imagen principal"
            class:list={"hero-img"}
        />
    </div>
</header>

<style>
    nav{
        position: fixed;
        top: 0;
        left: 50%;
        transform: translate(-50%);
        margin: 0 auto;
        width: 100%;
        max-width: var(--max-w);
        padding: 8px 16px;
        background-color: rgba(0, 0, 0, 0.432);
        z-index: 10;
    }
    ul{
        margin: 0px;
        padding: 0px;
        display: flex;
        gap: 20px;
    }

    li{
        list-style: none;
    }

    a{
        text-decoration: none;
        color: bisque;
    }

    .container {
        margin: 0 auto;
        width: 100%;
        height: 40vh;
        max-width: 1300px;
    }
    .hero-img {
        width: 100%;
        height: 100%;
        mask-image: linear-gradient(#000 60%, #0000)
    }
</style>